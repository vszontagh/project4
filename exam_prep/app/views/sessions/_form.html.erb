
<h1>Log in</h1><hr>

<%= form_for(:session, url: login_path) do |f| %>

  <%= f.label :username %><br>
  <%= f.text_field :username, class: "form-control" %><br>

  <%= f.label :password %><br>
  <%= f.password_field :password, class: "form-control" %><br>
  <a href="users/new">Create Account</a><br>

  <%= f.submit "Log in", class: "form-control" %>
  
<% end %>